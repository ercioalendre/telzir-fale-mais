<body>
  <div id="room" class="content">
    <header>
      <a href="/">
        <img src="/images/logo.svg" alt="Fale Mais Logo" />
      </a>
      <div class="buttons">
        <p>Olá, <%= user.name %>!</p>
        <a href="/logout" class="button grey">
          <img src="/images/logout.svg" alt="Sair" />
          Sair
        </a>
      </div>
    </header>
    <main>
      <section id="question-form">
        <div>
          <% if (msgType==="error" && msgContent) { %>
          <div class="message-wrapper error" id="message-wrapper">
            <div class="message-content">
              <p>
                <img src="/images/error.svg" alt="Warning" />
                <%= msgContent; %>
              </p>
              <img src="/images/close.svg" alt="Close" class="close-error" id="close-error" />
            </div>
          </div>
          <% }; %> <% if (msgType==="success" && msgContent) { %>
          <div class="message-wrapper success" id="message-wrapper">
            <div class="message-content">
              <p>
                <img src="/images/success.svg" alt="Success" />
                <%= msgContent; %>
              </p>
              <img src="/images/close.svg" alt="Warning" class="close-error" id="close-error" />
            </div>
          </div>
          <% }; %>
        </div>

        <h2>Calcule o custo da sua ligação</h2>
        <form action="/my-account/calcular" method="POST">
          <label for="callOrigin" class="scr-only">Origem</label>
          <select name="callOrigin" id="callOrigin">
            <option value="">Origem</option>
            <option value="11">(11)</option>
            <option value="16">(16)</option>
            <option value="17">(17)</option>
            <option value="18">(18)</option>
          </select>
          <label for="callDestination" class="scr-only">Destino</label>
          <select name="callDestination" id="callDestination">
            <option value="">Destino</option>
            <option value="11">(11)</option>
            <option value="16">(16)</option>
            <option value="17">(17)</option>
            <option value="18">(18)</option>
          </select>
          <label for="callDuration" class="scr-only"> Duração da chamada em minutos </label>
          <input
            type="text"
            name="callDuration"
            id="callDuration"
            placeholder="Duração da chamada em minutos"
          />
          <label for="faleMaisPlan" class="scr-only">Plano FaleMais</label>
          <select name="faleMaisPlan" id="faleMaisPlan" class="select-100">
            <option value="">Selecione um plano</option>
            <option value="FaleMais30">FaleMais30</option>
            <option value="FaleMais60">FaleMais60</option>
            <option value="FaleMais120">FaleMais120</option>
          </select>
          <button>
            <img src="/images/calculate.svg" alt="Calcular" />
            Calcular
          </button>
        </form>
        <div class="message-wrapper info" id="calc-results-wrapper">
          <div class="message-content">
            <p>
              <span id="calc-results-text-com-fale-mais"></span>
              <span id="calc-results-text-sem-fale-mais"></span>
            </p>
            <img
              src="/images/close.svg"
              alt="Warning"
              class="close-error"
              id="close-calc-results-wrapper"
            />
          </div>
        </div>
      </section>
    </main>
  </div>
</body>
